# Veritabanı Konfigürasyonu
DATABASE_URL="postgresql://postgres:password@localhost:5432/lawyer_portal"

# NextAuth.js Konfigürasyonu
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# Dosya Depolama (S3/MinIO)
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET_NAME="lawyer-portal-documents"
S3_REGION="us-east-1"

# Email Konfigürasyonu
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@avukatportali.com"

# Redis (Cache/Session)
REDIS_URL="redis://localhost:6379"

# ClamAV Antivirus
CLAMAV_HOST="localhost"
CLAMAV_PORT="3310"

# Uygulama Ayarları
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Avukat Portalı"

# Güvenlik
ENCRYPTION_KEY="your-32-character-encryption-key"
JWT_SECRET="your-jwt-secret-key"

# Monitoring ve Logging
LOG_LEVEL="info"
ENABLE_AUDIT_LOGS="true"

